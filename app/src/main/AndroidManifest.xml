<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sam.story">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sam.story.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.sam.story.story.StoryActivity"
            android:label="@string/title_activity_story"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.sam.story.settings.SettingsActivity"
            android:label="@string/title_activity_settings"/>
        <activity 
            android:name=".dictionary.DictionaryActivity"
            android:label="@string/title_activity_dictionary"/>
    </application>

</manifest>