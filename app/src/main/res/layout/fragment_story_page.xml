<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="48dp"
    android:paddingRight="48dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:background="@color/white"
    tools:context="com.sam.words.StoryPageFragment">

    <TextView
        android:id="@+id/chapter"
        android:text="Chapter"
        android:textAlignment="center"
        android:lineSpacingMultiplier="0.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="48dp"
        />

    <com.sam.words.WordsView
        android:id="@+id/words_view"
        android:layout_below="@+id/chapter"
        android:layout_above="@+id/page_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/page_number"
        android:text="Page 1 of 1"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
