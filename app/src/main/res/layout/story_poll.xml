<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="com.sam.words.story.StoryFragment">

    <TextView
        android:id="@+id/poll_title"
        android:text="@string/poll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/poll_description"
        android:text="Title by Author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/poll_input"
        android:hint="@string/your_3_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/poll_submit"
        android:text="@string/submit"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/timer"
        android:text="Voting ends in 03:05"
        android:textAlignment="center"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/votes_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

</LinearLayout>
