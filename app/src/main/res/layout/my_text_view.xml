<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="48dp"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="24dp"
    android:layout_marginRight="24dp"
    card_view:contentPaddingTop="24dp"
    card_view:contentPaddingLeft="24dp"
    card_view:contentPaddingRight="24dp"
    card_view:contentPaddingBottom="24dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/story_likes"
            android:drawableLeft="@drawable/ic_heart"
            android:drawablePadding="2dp"
            android:text="0 likes"
            android:gravity="start|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/story_date"
            android:text="1h"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/story_title"
            android:text="Title"
            android:alpha="1"
            android:textAlignment="center"
            android:paddingStart="64dp"
            android:paddingEnd="64dp"
            android:lineSpacingMultiplier="0.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/story_likes"
            />

        <TextView
            android:id="@+id/story_author"
            android:text="author"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/story_title"
            />

        <com.sam.words.WordsView
            android:id="@+id/words_view"
            android:layout_marginTop="48dp"
            android:paddingLeft="@dimen/story_horizontal_padding"
            android:paddingTop="@dimen/story_vertical_padding"
            android:layout_below="@+id/story_author"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</android.support.v7.widget.CardView>