<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="1dp"
    android:padding="12dp"
    >

    <TextView
        android:id="@+id/score"
        android:text="2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/up_arrow"
        android:src="@android:drawable/arrow_up_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/score"
        android:layout_toEndOf="@+id/score"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/word"
        android:text="Banana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/up_arrow"
        android:layout_toEndOf="@+id/up_arrow"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/word_submitted_by"
            android:text="xx420xxblaze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/time_ago"
            android:text="2h ago"
            android:textColor="@color/grayDk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/word_submitted_by"
            android:layout_alignRight="@+id/word_submitted_by"
            android:layout_alignEnd="@+id/word_submitted_by"/>
    </RelativeLayout>

</RelativeLayout>